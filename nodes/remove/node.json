{
  "name": "remove",
  "ns": "nedb",
  "description": "Remove documents from database",
  "phrases": {
    "active": "Removing document(s)"
  },
  "ports": {
    "input": {
      "db": {
        "title": "Database",
        "type": "Datastore"
      },
      "query": {
        "title": "Query",
        "type": "object"
      },
      "options": {
        "title": "Options",
        "type": "object",
        "properties": {
          "multi": {
            "title": "Multi",
            "description": "allows the removal of multiple documents if set to true",
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "output": {
      "out": {
        "title": "New Document",
        "type": "object"
      },
      "numRemoved": {
        "title": "Removed",
        "type": "number"
      },
      "error": {
        "title": "Error",
        "type": "Error"
      }
    }
  }
}
